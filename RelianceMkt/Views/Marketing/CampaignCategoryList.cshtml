@model RelianceMkt.Models.campaign_category
@{
    ViewBag.Title = "CampaignCategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12 col-xxl-12 col-lg-12">
            <div class="row">
                <div class="col-xl-12">
                    @using (Html.BeginForm("CampaignCategoryList", "Marketing", FormMethod.Post))
                    {
                        <div class="card">
                            <div class="card-header pb-0 border-0">
                                <h3 class="fs-20 text-black">Enter your campaign category below</h3>
                            </div>
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="form-group col-xl-3">
                                        <label class="text-black font-w500 mb-3">
                                            Campaign Category:
                                        </label>
                                        <span class="text-danger ml-1">*</span>
                                        @Html.TextBoxFor(x => x.campaign_category_name, "",
                                            new { @class = "form-control", @required = "true" })
                                    </div>
                                    <div class="form-group col-xl-3" style="padding-top:38px;">
                                        <button type="submit" class="btn btn-primary ml-3">SAVE</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!--**********************************
        List start
    ***********************************-->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Campaign Category</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive-md">
                            <thead>
                                <tr>
                                    <th><strong>S NO.</strong></th>
                                    <th><strong>Category</strong></th>
                                    <th><strong>Actions</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                    foreach (var item in ViewBag.lstCategory)
                                    {
                                        <tr id="row-@item.campaign_category_id">
                                            <td><strong>@i</strong></td>
                                            <td>@item.campaign_category_name</td>
                                            <td>
                                                <a href="#" class="btn btn-success btn-sm"
                                                   onclick="EditCategory(@item.campaign_category_id)">
                                                    Edit
                                                </a>
                                                <a href="#" class="btn btn-danger btn-sm ml-2"
                                                   onclick="DeleteCategory(@item.campaign_category_id)">
                                                    Delete
                                                </a>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- BEGIN MODAL -->
    <div class="modal fade none-border" id="edit-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><strong>Edit Category</strong></h4>
                </div>
                <div class="modal-body" id="myModalBodyDiv1"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!--**********************************
   List end
***********************************-->

@section js {
    <script src="~/Content/vendor/jqueryui/js/jquery-ui.min.js"></script>
    <script>
        // ✅ Edit
        var EditCategory = function (CategoryId) {
            var url = '@Url.Action("EditCategory", "Marketing")' + '?CategoryId=' + CategoryId;
            $("#myModalBodyDiv1").load(url, function () {
                $("#edit-modal").modal("show");
            });
        }

        // ✅ Delete (soft delete)
        function DeleteCategory(categoryId) {
            if (confirm("Are you sure you want to delete this category?")) {
                $.ajax({
                    url: '@Url.Action("DeleteCampaignCategory", "Marketing")',
                    type: 'POST',
                    data: { id: categoryId },
                    success: function (response) {
                        if (response.success) {
                            $("#row-" + categoryId).fadeOut(500, function () { $(this).remove(); });
                        } else {
                            alert("Error deleting category: " + response.message);
                        }
                    },
                    error: function () {
                        alert("Error occurred while deleting.");
                    }
                });
            }
        }
    </script>
}
