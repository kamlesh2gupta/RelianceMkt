<script>
    function DeleteLandingPageList(landingpagesId) {
        if (confirm("Are you sure you want to delete this landing page?")) {
            $.ajax({
                url: '@Url.Action("DeleteLandingPageList", "Marketing")', // Controller method name
                type: 'POST',
                data: { landingpagesId: landingpagesId }, // Must match C# parameter
                success: function (response) {
                    if (response.success) {
                        $("#row-" + landingpagesId).remove(); // Remove row from DOM
                        location.reload();
                    } else {
                        alert("Error deleting landing page: " + response.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert("An error occurred while deleting: " + error);
                }
            });
        }
    }
</script>

