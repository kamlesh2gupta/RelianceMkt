[data-sidebar-style="mini"] .nav-header .logo-abbr {
    display: block;
    max-width: 240px;
}

.bg-gray {
    background-color: #ccc !important;
}

.bg-yellow {
    background-color: #fdbf4f !important;
}

/*========password reset=========*/
.reset-btn {
    background-color: #4CAF50; /* green background */
    color: white;
    border: none;
    padding: 8px 16px;
    font-size: 16px;
    border-radius: 8px;
    cursor: pointer;
}

.reset-btn i {
    margin-right: 5px; /* icon ke aur text ke beech gap */
}

/* Custom styles for dashboard cards */
.widget-stat.card {
    transition: all 0.3s ease;
}

.widget-stat.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.card-body .media {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.card-body .media-body {
    flex: 1;
}

.card-body h3 {
    margin: 0;
    font-size: 1.5rem;
}

.card-body p {
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
}

/* Sidebar and header toggle styles */
.deznav, .nav-header {
    transition: transform 0.3s ease-in-out;
    width: 250px; /* Adjust to match your sidebar/header width */
    position: fixed;
    left: 0;
}

.nav-header {
    top: 0;
    z-index: 1000; /* Ensure header is above sidebar */
    height: 95px;
}

.deznav {
    top: 0px; /* Start below header */
    /* height: calc(100vh - 95px); */ /* Full height minus header */
    margin-bottom: 1rem;
}

.sidebar-hidden {
    transform: translateX(-100%); /* Slide out of view */
}

/* Content adjustment when sidebar and header are hidden */
.content-body {
    transition: margin-left 0.3s ease-in-out;
    margin-left: 250px; /* Match sidebar width */
}

.sidebar-hidden ~ .content-body {
    margin-left: 0;
}

/* Hamburger to X animation */
.hamburger.active .line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
}

.hamburger.active .line:nth-child(2) {
    opacity: 0;
}

.hamburger.active .line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
}

/* Ensure hamburger is clickable */
.nav-control .hamburger {
    cursor: pointer;
}

/* Ensure header (navbar) stays in place */
.header {
    position: fixed;
    top: 0;
    left: 0; /* Start from left edge when sidebar is hidden */
    width: 100%;
    z-index: 999;
    transition: padding-left 0.3s ease-in-out;
    padding-left: 250px; /* Match sidebar width */
}

.sidebar-hidden ~ .header {
    padding-left: 0;
}

@*/* Ensure sidebar and header are visible by default on larger screens */
@media (min-width: 768px) {
    .deznav, .nav-header {
        transform: translateX(0);
    }
}

/* Optional: Hide sidebar and header by default on mobile */
@media (max-width: 767px) {
    .deznav, .nav-header {
        transform: translateX(-100%);
    }
    .content-body {
        margin-left: 0;
    }
    .header {
        padding-left: 0;
    }
}*@

/* ===== Sidebar Collapse Fix ===== */

/* When sidebar is collapsed */
.deznav.hide {
    width: 80px !important; /* only icons visible */
    overflow: hidden;
}

/* Hide sidebar menu text when collapsed */
.deznav.hide .metismenu li a span,
.deznav.hide .metismenu li a .menu-text,
.deznav.hide .metismenu li a span:not(i) {
    display: none !important;
}

/* Center icons when collapsed */
.deznav.hide .metismenu li a i {
    margin: 0 auto;
    font-size: 1.3rem;
    display: block;
    text-align: center;
}

/* Adjust logo when collapsed */
.nav-header.hide .logo-abbr {
    max-width: 70px !important;
}

.nav-header.hide a img {
    margin-left: 5px;
}

/* Content adjustment when sidebar collapses */
.content-body.full {
    margin-left: 80px !important; /* same as collapsed sidebar width */
    transition: all 0.3s ease-in-out;
}

/* Header alignment when sidebar collapses */
.nav-header.hide {
    width: 80px !important;
    transition: all 0.3s ease-in-out;
}

.header {
    transition: padding-left 0.3s ease-in-out;
}

.header.full,
.header.hide {
    padding-left: 80px !important; /* match collapsed sidebar width */
}

/* Smooth animation */
.deznav,
.nav-header,
.content-body {
    transition: all 0.3s ease-in-out;
}

