
@{
    ViewBag.Title = "campaigndetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="form-head d-flex mb-0 mb-lg-4 align-items-start">
        <div class="mr-auto d-none d-lg-block">
            <h2 class="text-black font-w600">#ADS001245</h2>
            @*<p class="mb-0">Current campaign list</p>*@
        </div>
        <div class="d-none d-lg-flex align-items-center">
            <div class="text-right">
                <h3 class="fs-20 text-black mb-0">09:62 AM</h3>
                <span class="fs-14">Monday, 3 Augusut 2020</span>
            </div>
            <a class="ml-4 text-black p-3 rounded border text-center width60" href="#">
                <i class="las la-cog scale5"></i>
            </a>
        </div>
    </div>


    <h4>Advisor Engagement campaign</h4><hr>
    <div class="row">
        <div class="col-lg-9 col-sm-12 border-right">
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong class="text-left">Channel</strong>
                    <span class="mb-0">@ViewBag.lstAllCampaigns.ch.channel_name</span>
                </li>
                <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong class="text-left">Category</strong>
                    <span class="mb-0">@ViewBag.lstAllCampaigns.cc.campaign_category_name</span>
                </li>
                <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong class="text-left">Campaign</strong>
                    <span class="mb-0">@ViewBag.lstAllCampaigns.cam.campaign_name	</span>
                </li>
                <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong class="text-left">Language</strong>
                    <span class="mb-0">@ViewBag.lstAllCampaigns.cm.campaign_master_lang	</span>
                </li>
                <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong class="text-left">Sub Campaign</strong>
                    <span class="mb-0">@ViewBag.lstAllCampaigns.sc.subcampaign_name</span>
                </li>
                <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong class="text-left">Type of Campaign</strong>
                    <span class="mb-0 text-right">@ViewBag.lstAllCampaigns.cm.campaign_master_type</span>
                </li>

                <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong class="text-left">Landing Page Link</strong>
                    <span class="mb-0 text-right">@ViewBag.lstAllCampaigns.cm.campaign_master_landing_page</span>
                </li>
                <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong class="text-left">Date Start  -  Date End</strong>
                    <span class="mb-0 text-right">From @ViewBag.lstAllCampaigns.cm.campaign_master_start_date.ToString("dd-MM-yyyy")  To  @ViewBag.lstAllCampaigns.cm.campaign_master_end_date.ToString("dd-MM-yyyy")</span>
                </li>
                <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong>Description Tool Tip</strong>
                    <br />

                    <span class="mb-0 text-right">@ViewBag.lstAllCampaigns.cm.campaign_master_description</span>
                </li>
                <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong class="text-left">Creative Caption</strong>
                    <span class="mb-0 text-right">@ViewBag.lstAllCampaigns.cm.campaign_master_creative_caption</span>
                </li>

                <li class="list-group-item d-flex px-0 justify-content-between">
                    <strong class="text-left">Tags</strong>
                    <span class="mb-0 text-right">@ViewBag.lstAllCampaigns.cm.campaign_master_tags</span>
                </li>

            </ul>
        </div>
        <div class="col-lg-3 col-sm-12">
            @{
                //string csv = @ViewBag.lstAllCampaigns.cm.campaign_master_images; // The input string
                string[] parts = ViewBag.lstAllCampaigns.cm.campaign_master_images.Split(','); // Call Split method

                foreach (string item in parts)
                {
                    @*<h6>@item</h6>
                        <br />*@
                    <img class="align-self-center mr-3 " width="230" src="~/Content/images/campaign/@item" alt="Campaign">
                    <br />
                }
            }

        </div>
        <p class="text-justify">
            <strong class="text-left">Social Media Share</strong>
            <span class="mb-0 text-right">
                @if (@ViewBag.lstAllCampaigns.cm.campaign_master_instagram)
                {
                    <i class="lab la-instagram gs-icon bgl-secondary text-secondary mr-3"></i>
                }
                @if (@ViewBag.lstAllCampaigns.cm.campaign_master_facebook)
                {
                    <a href="https://www.facebook.com/dialog/share?href=@Uri.EscapeDataString("http://engage.date24.in/Marketing/campaignfbshare?CampaignMasterId=1&quote=@item.cm.campaign_master_creative_caption&app_id=841516383953923&display=page&redirect_uri=http://engage.date24.in/Marketing/campaignfbshare?CampaignMasterId=1")" target="_blank"><i class="lab la-facebook gs-icon bgl-secondary text-secondary mr-3"></i></a>
                }
                @if (@ViewBag.lstAllCampaigns.cm.campaign_master_twitter)
                {
                    <a href="https://twitter.com/intent/tweet?text=item.cm.campaign_master_creative_caption%0Ahttp://engage.date24.in/Marketing/campaignfbshare?CampaignMasterId=1" target="_blank"><i class="lab la-twitter gs-icon bgl-secondary text-secondary mr-3"></i></a>

                }
                @if (@ViewBag.lstAllCampaigns.cm.campaign_master_whatsapp)
                {
                    <!--<i class="lab la-whatsapp social-icon bg-danger text-white"></i>-->
                    <a href="whatsapp://send?text=item.cm.campaign_master_creative_caption
                                   Click here to view more http://engage.date24.in/Marketing/campaignfbshare?CampaignMasterId=1 :" target="_blank"><i class="lab la-whatsapp gs-icon bgl-secondary text-secondary mr-3"></i></a>
                }





            </span>
        </p>
    </div>
</div>