<div class="container-fluid">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Share</a></li>
        </ol>
    </div>
    <!-- row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Datewise Share Activity</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("DateWiseShare", "Marketing", FormMethod.Post))
                    {
                        <div class="form-row">
                            <div class=" form-group col-md-3">
                                <label> From: </label>@Html.TextBox("fromdate", "", new { @type = "date", @class = "form-control", @Value = ViewBag.dt1.ToString("yyyy-MM-dd") })
                            </div>
                            <div class="form-group col-md-3">
                                <label> To: </label>@Html.TextBox("todate", "", new { @type = "date", @class = "form-control", @Value = ViewBag.dt2.ToString("yyyy-MM-dd") })
                            </div>
                            @if (Session["subadmin_type"] == null || Session["subadmin_type"].ToString() != "ReadOnly")
                            {
                                <div class="form-group col-md-3">
                                    <label> Channel: </label>
                                    @Html.DropDownList("channel", new SelectList(ViewBag.lstChannel, "channelname", "channelname"), "SELECT CHANNEL", new { @class = "form-control" })
                                </div>
                            }
                            <div class="form-group col-md-3">
                                <label> Zone: </label>
                                @Html.DropDownList("zone", new SelectList(ViewBag.lstZone, "zonename", "zonename"), "SELECT ZONE", new { @class = "form-control" })
                            </div>

                            <div class="col-md-4" style="padding-top:28px;">
                                <button type="submit" class="btn btn-warning ml-3">APPLY</button>
                                <button type="button" id="btnexport" class="btn btn-warning ml-3">Export To Excel</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        Leads and Share Report From @Convert.ToDateTime(ViewBag.dt1).ToString("dd-MM-yyyy")
                        To @Convert.ToDateTime(ViewBag.dt2).ToString("dd-MM-yyyy")
                    </h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive-md" id="table2excel" style="border-collapse: collapse; border: none;">
                            <thead style="background-color: #f8f9fa;">
                                <tr>
                                    <th style="color:#00000054;white-space:nowrap;font-size:15px;font-weight:600;"><strong>Chanel</strong></th>
                                    <th style="color:#00000054;white-space:nowrap;font-size:15px;font-weight:600;"><strong>Zone</strong></th>
                                    <th style="color:#00000054;white-space:nowrap;font-size:15px;font-weight:600;"><strong>SAPCODE</strong></th>
                                    <th style="color:#00000054;white-space:nowrap;font-size:15px;font-weight:600;"><strong>TOTAL SHARE</strong></th>
                                    <th style="color:#00000054;white-space:nowrap;font-size:15px;font-weight:600;"><strong>TOTAL LEADS</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                    foreach (var item in Model)
                                    {
                                        Html.RenderAction("GetLeadRecord", "Marketing", new { @srno = i, @fd = ViewBag.dt1, @td = ViewBag.dt2, @sapcode = item.sapcode, @sharecount = item.count, @channel = ViewBag.channel, @zone = ViewBag.zone });
                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section js{
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <!-- Include table2excel JS -->
    <script src="~/Content/js/jquery.table2excel.js"></script>

    <script>
        $(document).ready(function () {
            $('#table2excel').DataTable({
                "paging": true,
                "pageLength": 10,
                "lengthMenu": [10, 25, 50, 100],
                "ordering": false,
                "searching": false,
                "info": true,
                autoWidth: true
            });
        });

        $("#btnexport").click(function () {
            $("#table2excel").table2excel({
                exclude: ".noExl",
                name: "Worksheet Name",
                filename: "Shares",
                fileext: ".xls"
            });
        });
    </script>
}
