    <div class="deznav">
        <div class="deznav-scroll">
            @{
                var userRole = Session["role"] as string;
                var subAdminType = Session["subadmin_type"] as string;

                // Role checks
                bool isAdmin = userRole == "Admin";
                bool isSubAdmin = userRole == "SubAdmin";
                bool isReadOnlySubAdmin = (isSubAdmin && subAdminType == "ReadOnly") || userRole == "Sub-Admin(Read-Only)";
                bool isCampaignCreator = (isSubAdmin && subAdminType == "CampaignCreator") || userRole == "Sub-Admin(Campaign Creator)";

                // Show all menu items (except logout/report) only to Admin + SubAdmin (not readonly/campaign creator unless allowed)
                bool showAll = isAdmin || isSubAdmin;
            }

            <ul class="metismenu" id="menu">

                <!-- Dashboard: Show to all except Campaign Creator -->
                @if (isCampaignCreator || isReadOnlySubAdmin || isAdmin || isSubAdmin)
                {
                    <li>
                        <a href="~/Marketing/Dashboard" aria-expanded="false">
                            <i class="flaticon-381-networking"></i> <span>Dashboard</span>
                        </a>
                    </li>
                }

                <!-- Add SubAdmin: Only Admin -->
                @if (isAdmin)
                {
                    <li>
                        <a href="~/Marketing/AddSubAdmin" aria-expanded="false">
                            <i class="fas fa-user-cog"></i> <span>Add SubAdmin</span>
                        </a>
                    </li>

                    <!-- Master Section: Only Admin -->
                    <li>
                        <a class="has-arrow ai-icon" href="#" aria-expanded="false">
                            <i class="flaticon-381-settings"></i> <span>Master</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a href="~/Marketing/ChannelList">Channels</a></li>
                            <li><a href="~/Marketing/CampaignCategoryList">Categories</a></li>
                            <li><a href="~/Marketing/campaignlist">Campaigns</a></li>
                            <li><a href="~/Marketing/subcampaignlist">Sub-Campaigns</a></li>
                            <li><a href="~/Marketing/landingpagelist">Landing Page</a></li>
                        </ul>
                    </li>
                }

                <!-- Campaign & New Campaign: Admin, SubAdmin, Campaign Creator -->
                @if (isAdmin || isSubAdmin || isCampaignCreator)
                {
                    <li>
                        <a href="~/Marketing/campaignMult" aria-expanded="false">
                            <i class="flaticon-381-notepad"></i> <span>Campaign</span>
                        </a>
                    </li>
                    <li>
                        <a href="~/Marketing/newcampaign" aria-expanded="false">
                            <i class="flaticon-381-plus"></i> <span>New Campaign</span>
                        </a>
                    </li>
                }

                <!-- Hot Leads & Share: Only Admin + SubAdmin (not readonly) -->
                @*@if (isAdmin || (isSubAdmin && !isReadOnlySubAdmin && !isCampaignCreator))*@
                @if (isAdmin || isCampaignCreator || isSubAdmin || isReadOnlySubAdmin)
                {
                    @*<li>
                <a href="~/Marketing/hotleads" aria-expanded="false">
                    <i class="flaticon-381-settings-2"></i> Hot Leads
                </a>
            </li>
            <li>
                <a href="~/Marketing/DateWiseShare" aria-expanded="false">
                    <i class="bi bi-share me-1"></i> Share
                </a>
            </li>*@


                    <!-- Report: Show to all -->
