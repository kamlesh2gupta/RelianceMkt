@model RelianceMkt.Models.campaign_category


<div>

    <form id="myForm">
        <div class="row">
            <div class="col-md-8">
                @Html.HiddenFor(m => m.campaign_category_id)
                @Html.TextBoxFor(model => model.campaign_category_name, new { @class = "form-control", @placeholder = "Name" })
            </div>
            <div class="col-md-4">
                <a href="#" id="btnSubmit" class="btn btn-success btn-block">
                    @if (Model.campaign_category_id > 0)
                    {
                        <span>Update</span>
                    }
                    else
                    {<span>Save</span>}
                </a>
            </div>
        </div>



    </form>
    @*<div class="sk-child sk-bounce1" id="loaderDiv"></div>*@
</div>


<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function () {

            //$("#loaderDiv").show();
            //debugger;
            var myformdata = $("#myForm").serialize();

            $.ajax({

                type: "POST",
                //url: "/Marketing/EditCategory",
                url: '@Url.Action("EditCategory", "Marketing")',
                data: myformdata,
                success: function () {
                    //$("#loaderDiv").hide();
                    $("#edit-modal").modal("hide");
                   window.location.href = '@Url.Action("CampaignCategoryList", "Marketing")';
                }
            })
        })
    })
</script>
