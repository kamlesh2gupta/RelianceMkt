
@{
    ViewBag.Title = "UserLeaderBoard";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Leaderborad</h4>

            </div>
            <div class="card-body">
                <div class="custom-tab-1">
                    <ul class="nav nav-tabs justify-content-end mb-4">
                        <li class=" nav-item">
                            <a href="#navpills2-1" class="nav-link active" data-toggle="tab" aria-expanded="false">Shares</a>
                        </li>
                        <li class="nav-item">
                            <a href="#navpills2-2" class="nav-link" data-toggle="tab" aria-expanded="false">Leads</a>
                        </li>
                        
                    </ul>
                    <div class="tab-content">
                        <div id="navpills2-1" class="tab-pane active">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="basic-list-group">
                                        <ul class="list-group">
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span class="m-r-10">Rank</span>
                                                Image
                                                <span class="badge badge-primary badge-pill">Shares</span>
                                            </li>
                                            @foreach (var item in ViewBag.ShareLeaderBoard)
                                            {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span class="m-r-10">@item.SHC_ID</span>
                                                <img class="rounded-circle img-fluid" src="~/Content/images/avatar/1.png" alt="" width="30">
                                                <span class="badge badge-primary badge-pill">@item.SHC_SHARECOUNT</span>
                                            </li>
                                            }
                                            @if (@ViewBag.ShareLeaderBoardMyRank != null)
                                            {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span class="m-r-10">@ViewBag.ShareLeaderBoardMyRank.SHC_ID</span>
                                                <img class="rounded-circle img-fluid" src="~/Content/images/me.png" alt="" width="30">
                                                <span class="badge badge-primary badge-pill">  @ViewBag.ShareLeaderBoardMyRank.SHC_SHARECOUNT</span>
                                            </li>
                                            }
                                            else
                                            {

                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <span class="m-r-10">NA</span>
                                                    <img class="rounded-circle img-fluid" src="~/Content/images/me.png" alt="" width="30">
                                                    <span class="badge badge-primary badge-pill">NA</span>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="navpills2-2" class="tab-pane">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="basic-list-group">
                                        <ul class="list-group">

                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span class="m-r-10">Rank</span>
                                                Image
                                                <span class="badge badge-primary badge-pill">Leads</span>
                                            </li>
                                            @foreach (var item in ViewBag.LeadLeaderBoard)
                                            {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span class="m-r-10">@item.leads_id</span>
                                                <img class="rounded-circle img-fluid" src="~/Content/images/avatar/1.png" alt="" width="30">
                                                <span class="badge badge-primary badge-pill">@item.leads_sapcode</span>
                                            </li>
                                            }
                                            @if (@ViewBag.LeadLeaderBoardMyRank != null)
                                            {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span class="m-r-10">@ViewBag.LeadLeaderBoardMyRank.leads_id</span>
                                                <img class="rounded-circle img-fluid" src="~/Content/images/me.png" alt="" width="30">
                                                <span class="badge badge-primary badge-pill">  @ViewBag.LeadLeaderBoardMyRank.leads_sapcode</span>
                                            </li>
                                            }
                                            else
                                            {

                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span class="m-r-10">NA</span>
                                                <img class="rounded-circle img-fluid" src="~/Content/images/me.png" alt="" width="30">
                                                <span class="badge badge-primary badge-pill">NA</span>
                                            </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


