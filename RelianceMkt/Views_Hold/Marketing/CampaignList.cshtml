@model RelianceMkt.Models.campaign
@{
    ViewBag.Title = "CampaignList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12 col-xxl-12 col-lg-12">
            <div class="row">
                <div class="col-xl-12">
                    @using (Html.BeginForm("CampaignList", "Marketing", FormMethod.Post))
                    {
                        <div class="card">
                            <div class="card-header pb-0 border-0">
                                <h3 class="fs-20 text-black">Describe your campaign below</h3>
                            </div>
                            <div class="card-body">
                                @*<form>*@

                                <div class="form-row">
                                    <div class="form-group col-xl-3">
                                        <label class="text-black font-w500 mb-3">Campaign Category:</label><span class="text-danger ml-1">*</span>
                                        @Html.DropDownListFor(x => x.campaign_category_id, new SelectList(ViewBag.lstcategory, "campaign_category_id", "campaign_category_name"),
                                         "Select Category", new { @lass = "form-control", @required = "true" })
                                        @*</form>*@

                                    </div>
                                    <div class="form-group col-xl-3">
                                        <label class="text-black font-w500 mb-3">Campaign Name:</label><span class="text-danger ml-1">*</span>
                                        @Html.TextBoxFor(x => x.campaign_name, "", new { @class = "form-control", @required = "true" })
                                        @*</form>*@

                                    </div>
                                    <div class="form-group col-xl-3" style="padding-top:38px;">
                                        <button type="submit" class="btn btn-primary ml-3">SAVE</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>




    <!--**********************************
        List start
    ***********************************-->

    <div class="row">

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Campaign</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive-md">
                            <thead>
                                <tr>

                                    <th><strong>S NO.</strong></th>
                                    <th><strong>Category</strong></th>
                                    <th><strong>Campaign</strong></th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;

                                    foreach (var item in ViewBag.lstCampaign)
                                    {
                                        <tr>

                                            <td><strong>@i</strong></td>
                                            <td>@item.cc.campaign_category_name</td>
                                            <td>@item.cam.campaign_name</td>
                                            <td><a href="#" class="btn btn-success" onclick="EditCampaignMaster(@item.cam.campaign_id)">Edit </a> </td>
                                        </tr>
                                        i++;
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- BEGIN MODAL -->
    <div class="modal fade none-border" id="edit-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><strong>Edit Campaign</strong></h4>
                </div>
                <div class="modal-body" id="myModalBodyDiv1"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                    @*<button type="button" class="btn btn-success save-event waves-effect waves-light">
                            Update
                        </button>*@

                    @*<button type="button" class="btn btn-danger delete-event waves-effect waves-light" data-dismiss="modal">Delete</button>*@
                </div>
            </div>
        </div>
    </div>
</div>

<!--**********************************
   List end
***********************************-->
@section js
{

    <script src="~/Content/vendor/jqueryui/js/jquery-ui.min.js"></script>
    <script>

        var EditCampaignMaster = function (CampaignId) {
            //debugger;
            //var url = "/Marketing/EditCampaignMaster?CampaignId=" +CampaignId;

            var url = '@Url.Action("EditCampaignMaster", "Marketing")' + '?CampaignId=' + CampaignId;

            $("#myModalBodyDiv1").load(url, function () {
                $("#edit-modal").modal("show");

            })

        }
    </script>
}